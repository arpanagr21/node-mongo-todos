# Application
NODE_ENV=development
PORT=3000

# MongoDB Configuration
# Option 1: Use direct URI (takes precedence if set)
MONGO_URI=

# Option 2: Build URI from individual components (used if MONGO_URI is not set)
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_DATABASE=tt
# Leave empty for no authentication, or set username/password for authenticated connection
MONGO_USERNAME=test
MONGO_PASSWORD=tester

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Redis Configuration (optional)
# Option 1: supply full redis url (used if set)
REDIS_URL=

# Option 2: supply host/port/password used to build URL when REDIS_URL is empty
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
